<div id="wl-loading">
  <span class="wl-loader"></span>
  <svg class="wl-waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
    <defs>
      <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"></path>
    </defs>
    <g class="wl-parallax">
      <use class="wl-parallax-1" xlink:href="#gentle-wave" x="48" y="0" fill="rgb(255 42 99 / 70%)"></use>
      <use class="wl-parallax-2" xlink:href="#gentle-wave" x="48" y="3" fill="rgb(245 144 54 / 70%)"></use>
      <use class="wl-parallax-3" xlink:href="#gentle-wave" x="48" y="5" fill="rgb(131 249 44 / 70%)"></use>
      <use class="wl-parallax-4 " xlink:href="#gentle-wave" x="48" y="7" fill="rgb(0 243 245 / 70%)"></use>
    </g>
  </svg>
  <style>
    #wl-loading {
      display: flex;
      justify-content: center;
      align-items: center;
      position: fixed;
      z-index: 989895;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      background-image: linear-gradient(to left, #eaeb17, #cc3be7);
    }

    .wl-waves {
      position: absolute;
      bottom: 0;
      width: 100%;
      min-height: 100px;
      height: 40vh;
    }

    .wl-parallax > use {
      animation: wl-move-forever 25s cubic-bezier(.55, .5, .45, .5) infinite;
    }

    .wl-parallax-1 {
      animation-delay: -2s;
      animation-duration: 7s;
    }

    .wl-parallax-2 {
      animation-delay: -3s;
      animation-duration: 10s;
    }

    .wl-parallax-3 {
      animation-delay: -4s;
      animation-duration: 13s;
    }

    .wl-parallax-4 {
      animation-delay: -5s;
      animation-duration: 18s;
      color: rgb(000 245 231 / 100%);
    }

    .wl-loader {
      position: relative;
      width: 120px;
      height: 140px;
      background-image: radial-gradient(circle 30px, #ffffff 100%, transparent 0),
      radial-gradient(circle 5px, #ffffff 100%, transparent 0),
      radial-gradient(circle 5px, #ffffff 100%, transparent 0),
      linear-gradient(#ffffff 20px, transparent 0);
      background-position: center 127px, 94px 102px, 16px 18px, center 114px;
      background-size: 60px 60px, 10px 10px, 10px 10px, 4px 14px;
      background-repeat: no-repeat;
      perspective: 500px;
    }

    .wl-loader::before, .wl-loader::after {
      content: '';
      position: absolute;
      left: 50%;
      top: 50%;
      border-radius: 50%;
      box-sizing: border-box;
      transform: translate(-50%, -55%) rotate(-45deg) rotateY(0deg);
    }

    .wl-loader::before {
      width: 100px;
      height: 100px;
      border: 3px solid #ffffff;
      border-right-color: transparent;
    }

    .wl-loader::after {
      height: 80px;
      width: 80px;
      border: 7px solid #ff3d00;
      animation: wl-l-rotate 0.5s linear infinite;
    }

    @keyframes wl-move-forever {
      0% {
        transform: translate3d(-90px, 0, 0);
      }

      100% {
        transform: translate3d(85px, 0, 0);
      }
    }

    @keyframes wl-l-rotate {
      to {
        transform: translate(-50%, -55%) rotate(-45deg) rotateY(360deg)
      }
    }
  </style>
</div>
